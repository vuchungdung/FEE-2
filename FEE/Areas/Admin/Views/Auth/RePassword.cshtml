@model FEE.ViewModel.RePasswordViewModel
@{
    ViewBag.Title = "RePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}
@Html.Partial("_MessageAlert")

<div class="login-box-body">
    <p class="login-box-msg">Lấy lại mật khẩu</p>

    @using (Html.BeginForm("RePassword", "Auth", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <div class="form-group has-feedback">
            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", @required = "true", @placeholder = "Nhập tài khoản" })
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Gửi yêu cầu</button>

            </div>
            <div class="col-md-6">
                <a href="/Admin/Auth/Login">Quay lại</a>
            </div>
            <!-- /.col -->
        </div>
    }
</div>
