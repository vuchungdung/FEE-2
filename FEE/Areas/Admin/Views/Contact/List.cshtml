@model IEnumerable<FEE.ViewModel.ContactViewModel>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@Html.Partial("_MessageAlert")
<script src="~/Areas/Admin/template_admin/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
            },
            "columnDefs": [
                { "orderable": false, "targets": [1,2,4,5] },
                { "orderable": true, "targets": [0, 3] }
            ]
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "responsive": true
        });
    });
</script>

<section class="content-header">
    <h1>
        QUẢN LÝ
        <small>LIÊN HỆ</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chính</a></li>
        <li class="active">Liên hệ</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách các câu hỏi</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Người gửi</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th>Ngày</th>
                                <th>Nội dung</th>
                                <th>Trạng thái</th>

                                <th style="width:10%">Trả lời</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.CreateDate.ToString("dd-MM-yyyy")</td>
                                    <td>@item.Content</td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <span class="btn btn-sm btn-success">Đã trả lời</span>
                                        }
                                        else
                                        {
                                            <span class="btn btn-sm btn-danger">Chưa trả lời</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="/admin/contact/reply/@item.ContactId"><i class="fa fa-fw fa-wechat" style="color:green;font-size:18px;font-weight:600"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Người gửi</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th>Ngày</th>
                                <th>Nội dung</th>
                                <th>Trạng thái</th>
                                <th style="width:10%">Trả lời</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>