@model FEE.ViewModel.WebInfoViewModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@Html.Partial("_MessageAlert")

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Cập nhật danh mục mới</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("Update", "WebInfo", FormMethod.Post))
        {
            @Html.TextBoxFor(model => model.Id, htmlAttributes: new { @style = "display:none", @type = "number" })
            <div class="form-group">
                <label>Hình ảnh Logo:</label>
                <button type="button" class="btn btn-xs btn-default" style="margin-top:2px;margin-left:0px" onclick="chooseImage()">Chọn ảnh</button>
                @Html.TextBoxFor(model => model.Logo, htmlAttributes: new { @style = "display:none" })
                @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <img class="img-responsive" style="max-width:60%;text-align:center" id="Img2" src="@ViewBag.Img" alt="Ảnh đại diện" />
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
            </div>
            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập Email" })
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập Địa chỉ" })
            </div>
            <div class="form-group">
                <label>Facebook:</label>
                @Html.TextBoxFor(model => model.Facebook, htmlAttributes: new { @class = "form-control", @placeholder = "Links facebook" })
            </div>
            <div class="form-group">
                <label>Youtube:</label>
                @Html.TextBoxFor(model => model.Youtube, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập like youtube" })
            </div>
            <div class="form-group">
                <label>Zalo:</label>
                @Html.TextBoxFor(model => model.Zalo, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập Links Zalo" })
            </div>
            <div class="form-group">
                <label>Thời gian hoạt động:</label>
                @Html.TextBoxFor(model => model.Time, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập thời gian hoạt động" })

            </div>
            <div class="form-group">
                <label>Website:</label>
                @Html.TextBoxFor(model => model.Website, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập thông tin website" })

            </div>
            <div class="form-group">
                <label>Copyright:</label>
                @Html.TextBoxFor(model => model.Copyright, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập thông tin Copyright" })

            </div>
            <div class="form-group">
                <label>Ghi chú nguồn:</label>
                @Html.TextBoxFor(model => model.Note, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập thông tin Copyright" })

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a href="/Admin/WebInfo/Index" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
<script>
    function chooseImage() {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fileUrl) {
            $('#Logo').attr('value', fileUrl);
            $('#Img2').attr('src', fileUrl);
        }
        finder.popup();
    }
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#avtpreview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#Img2").change(function () {
        readURL(this);
    });
</script>

