@model FEE.Models.WebInfo
@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="divider">
    <div class="container">
        <div class="row pt-30">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="icon-box left media bg-deep p-30 mb-20">
                            <a class="media-left pull-left" href="#"> <i class="pe-7s-map-2 text-theme-colored"></i></a>
                            <div class="media-body">
                                <h5 class="mt-0">Địa chỉ chính</h5>
                                <p>@Model.Address</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-12">
                        <div class="icon-box left media bg-deep p-30 mb-20">
                            <a class="media-left pull-left" href="#"> <i class="pe-7s-call text-theme-colored"></i></a>
                            <div class="media-body">
                                <h5 class="mt-0">Điện thoại liên hệ</h5>
                                <p>+@Model.Phone</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-12">
                        <div class="icon-box left media bg-deep p-30 mb-20">
                            <a class="media-left pull-left" href="#"> <i class="pe-7s-mail text-theme-colored"></i></a>
                            <div class="media-body">
                                <h5 class="mt-0">Email liên hệ</h5>
                                <p>@Model.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <h3 class="line-bottom mt-0 mb-30">Bạn muốn đặt câu hỏi với khoa?</h3>
                <!-- Contact Form -->
                @using (Html.BeginForm("Send", "Contact", FormMethod.Post, htmlAttributes: new { @enctype = "multipart/form-data", @id = "fromCaptcha" }))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Họ và tên <small>*</small></label>
                                <input name="Name" class="form-control" type="text" placeholder="Nhập họ và tên" required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Địa chỉ Email <small>*</small></label>
                                <input name="Email" class="form-control required email" type="email" placeholder="Nhập địa chỉ Email" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input name="Phone" class="form-control" type="text" placeholder="Nhập số điện thoại" required>
                    </div>

                    <div class="form-group">
                        <label>Lời nhắn</label>
                        <textarea name="Content" class="form-control required" rows="5" placeholder="Nhập lời nhắn" required></textarea>
                    </div>

                    <div class="form-group">
                        <label>Nhập đúng Captcha</label>
                        @Html.MathCaptcha()
                    </div>

                    <div class="form-group">
                        <input name="form_botcheck" class="form-control" type="hidden" value="" />
                        <button type="submit" class="btn btn-dark btn-theme-colored btn-flat mr-5" data-loading-text="Please wait...">Gửi ý kiến</button>
                        <button type="reset" class="btn btn-default btn-flat btn-theme-colored">Làm mới</button>
                    </div>
                }

                <!-- Contact Form Validation-->
            </div>
        </div>
    </div>
</section>


