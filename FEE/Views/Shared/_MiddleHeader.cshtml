<div class="header-middle p-0 bg-current xs-text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8">
                <a class="pull-left flip sm-pull-center mb-15" href="/"><img style="width:100%;padding-top: 10px;" src="~/template-client/images/logo2.png" alt=""></a>
            </div>           
            <div class="col-xs-12 col-sm-4 col-md-4">
                <div class="widget no-border sm-text-center mt-40 mb-40 m-0">
                    <div class="form-group" style="padding-top:5px;margin-bottom:0px;display:flex">
                        @using (Html.BeginForm("Search", "Post", FormMethod.Get, htmlAttributes: new { @style = "width:100%;display:flex"}))
                        {
                            <input type="text" style="font-size:11px;height:32px;border-radius:4px" name="tukhoa" value="@ViewBag.keyWord" class="form-control" placeholder="Từ khóa tìm kiếm" />
                            <button type="submit" style="display:contents">
                                <i class="fa fa-search" style="padding-top:4px;padding-left:5px;color:white;font-size:24px;font-weight:400;padding-right:10px"></i>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>